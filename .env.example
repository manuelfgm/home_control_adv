# ==============================================
# CONFIGURACIÓN DE ENTORNO - HOME CONTROL ADV
# ==============================================

# Django Settings
DEBUG=False
SECRET_KEY=your-super-secret-key-change-in-production-make-it-very-long-and-random
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,your-domain.com,your-ip-address

# Base de Datos PostgreSQL
POSTGRES_DB=home_control
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
DATABASE_URL=postgresql://postgres:postgres123@postgres:5432/home_control

# MQTT Broker
MQTT_HOST=mosquitto
MQTT_PORT=1883
MQTT_USERNAME=homecontrol
MQTT_PASSWORD=mqtt123
MQTT_CLIENT_ID=home_control_django

# Email Settings (opcional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Seguridad
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000,http://your-ip:8000
CORS_ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000,http://your-ip:8000

# Logs
LOG_LEVEL=INFO

# Timezone
TIME_ZONE=Europe/Madrid

# Static Files
STATIC_ROOT=/app/static
MEDIA_ROOT=/app/media

# Gunicorn Settings
GUNICORN_WORKERS=4
GUNICORN_MAX_REQUESTS=1000
GUNICORN_TIMEOUT=30

# Health Check
HEALTH_CHECK_URL=http://localhost:8000/health/

# Configuración simple para uso personal
# Puerto de acceso: 8000
# URL principal: http://localhost:8000/